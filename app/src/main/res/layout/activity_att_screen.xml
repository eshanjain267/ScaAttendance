<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Att_screen">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        android:alpha="0.1"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


    <ImageView
        android:id="@+id/ativ"
        android:layout_width="392dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"

        app:srcCompat="@drawable/ic_sca_logo" />


    <TextView
        android:id="@+id/attv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Contact No. / Barcode  :"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:layout_below="@id/ativ"/>

    <EditText
        android:id="@+id/ated1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/attv1"
         android:padding="10dp"
        android:textColor="#FF000000"
        android:maxLength="10"
        android:singleLine="true"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/attv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Name   :"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:layout_below="@id/ated1"/>

    <EditText
        android:id="@+id/ated2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/ated1"
        android:layout_toEndOf="@id/attv2"
       android:enabled="false"
        android:padding="10dp"
        android:textColor="#FF000000"
        android:textSize="20dp"
        />





    <TextView
        android:id="@+id/attv4"
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#228B22"
        android:layout_below="@id/ated2"/>

    <TextView
        android:id="@+id/attv5"
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#FF0000"
        android:layout_below="@id/attv4"/>

    <TextView
        android:id="@+id/attv6"
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#FF0000"
        android:layout_below="@id/attv5"/>

    <TextView
    android:id="@+id/attv7"
    android:layout_marginTop="10dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

        android:textStyle="bold"
    android:textSize="24dp"
    android:textColor="#228B22"
    android:layout_below="@id/attv6"/>

    <TextView
        android:id="@+id/attv8"
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#228B22"
        android:layout_below="@id/attv7"/>

    <TextView
        android:id="@+id/attv9"
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#FF0000"
        android:layout_below="@id/attv8"/>

            <Button
                android:id="@+id/btcam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use Camera"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:background="@drawable/roundbutton"
                android:layout_marginTop="20dp"
                android:layout_below="@id/attv9"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                />


</RelativeLayout>
    </ScrollView>


</RelativeLayout>